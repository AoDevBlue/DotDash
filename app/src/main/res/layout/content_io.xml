<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_io"
    tools:context="inputoutput.IOActivity"
    android:id="@+id/content_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/morse_output_timing_diagram_card"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        card_view:cardElevation="3dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true"
        android:visibility="gone">
        <net.aohayo.dotdash.inputoutput.DiagramOutputView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/morse_output_timing_diagram"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/morse_input_large_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        card_view:cardElevation="6dp"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardUseCompatPadding="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_access_point_white_48dp"
            android:background="@android:color/transparent" />
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:id="@+id/morse_input_text_container"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            card_view:cardElevation="2dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardUseCompatPadding="true"
            card_view:contentPaddingLeft="16dp"
            card_view:contentPaddingRight="16dp"
            card_view:contentPaddingTop="4dp"
            card_view:contentPaddingBottom="4dp"
            android:layout_gravity="center_vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="@string/morse_input_text_hint"
                    android:id="@+id/morse_input_text"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:imeOptions="actionSend" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/button3"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:backgroundTint="@color/colorCancel"
            android:textColor="@android:color/white"
            android:elevation="3dp"
            android:onClick="onStopTextInput"/>
    </LinearLayout>

</RelativeLayout>
